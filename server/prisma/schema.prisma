// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                           String          @id @default(uuid())
  username                     String          @unique
  hashedPassword               String
  isConfirmed                  Boolean         @default(false)
  verificationToken            String?
  resetPasswordToken           String?
  resetPasswordTokenExpiration DateTime?
  createdAt                    DateTime        @default(now())
  stripeCustomerId             String          @default("invalid")
  stripeSubscriptionId         String?
  accessToken                  AccessToken[]
  apiKey                       ApiKey[]
  apiStats                     ApiStats?
  PaymentMethod                PaymentMethod[]
}

model AccessToken {
  id        String   @id @default(uuid())
  token     String   @unique
  expiresAt DateTime
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model ApiKey {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  key       String    @unique
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  lastUsed  DateTime?
}

model ApiStats {
  user                                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId                              String    @unique
  accountBirthday                     DateTime  @default(now())
  billingPeriodStart                  DateTime  @default(now())
  billingPeriodEnd                    DateTime
  numApiCallsSinceAccountBirthday     Int       @default(0)
  numApiCallsSinceBillingStart        Int       @default(0)
  numApiCallsRemainingInBillingPeriod Int
  numApiCallsAllowedInPeriod          Int
  lastApiCall                         DateTime?
}

model PaymentMethod {
  id                    String   @id @default(uuid())
  stripePaymentMethodId String
  nickname              String?
  last4                 String?
  brand                 String?
  funding               String?
  expirationMonth       Int?
  expirationYear        Int?
  isPrimary             Boolean  @default(false)
  createdAt             DateTime @default(now())
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId                String
}
